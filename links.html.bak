    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>

        /* Links Styling */
        .links-section {
            margin-top: 20px;
        }

        .links-section h3 {
            background-color: #2c3e50;
            color: white;
            padding: 10px;
            border-radius: 5px;
            text-align: center;
        }

        .links-section ul {
            list-style: none;
            padding: 0;
            margin: 15px 0;
        }

        .links-section ul li {
            margin-bottom: 10px;
        }

        .links-section ul li a {
            text-decoration: none;
            font-size: 16px;
            color: #2980b9;
            font-weight: bold;
            transition: color 0.3s ease-in-out;
        }

        .links-section ul li a:hover {
            color: #e67e22;
        }

    </style>
    
</head>

<body>
    <!-- Meta Navigation (loaded via fetch) -->
    <header id="metanav">
        <script>
            fetch('../components/navbar.html')
                .then(response => response.text())
                .then(data => {
                    document.getElementById('metanav').innerHTML = data;
                });
        </script>
    </header>

    <!-- Page Content Wrapper -->
    <div class="content-wrapper">

        <!-- Left Sidebar -->
        <aside id="leftnav">
            <div class="left-images">
                <img src="images/ULM Circle Logo.jpg" alt="University of Louisiana at Monroe Logo">
                <img src="images/ulm-warhawks.jpeg" alt="ULM Warhawks">
            </div>
        </aside>

        <!-- Main Content -->
        <main id="maindisplay">
            <section id="centertext">
